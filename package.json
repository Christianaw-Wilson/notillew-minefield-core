{
  "name": "notillew-minefield-core",
  "version": "1.1.0",
  "license": "MIT",
  "description": "A minefield javascript core",
  "repository": "git@github.com:wellitongervickas/notillew-minefield-core.git",
  "author": "welliton gervickas <wellitogervickas@gmail.com>",
  "keywords": [
    "minefield",
    "javascript",
    "generator",
    "game"
  ],
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules ./src",
